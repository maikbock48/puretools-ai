// PureTools AI - Database Schema
// Using SQLite for development, can be changed to PostgreSQL for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // User credits
  credits       Int       @default(0)

  // Referral code (unique for each user)
  referralCode  String?   @unique

  // Email tracking
  day3EmailSent Boolean   @default(false)
  day7EmailSent Boolean   @default(false)

  // Relations
  accounts      Account[]
  sessions      Session[]
  transactions  Transaction[]
  usageLogs     UsageLog[]
  toolHistory   ToolHistory[]
  referralsSent Referral[] @relation("ReferrerUser")
  referralsReceived Referral[] @relation("ReferredUser")
  promoRedemptions PromoCodeRedemption[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Credit System Models
// TransactionType: PURCHASE | USAGE | BONUS | REFUND
model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String   // PURCHASE, USAGE, BONUS, REFUND
  amount      Int      // Positive for purchases, negative for usage
  description String
  metadata    String?  // JSON string for additional data
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

model UsageLog {
  id          String   @id @default(cuid())
  userId      String
  toolType    String   // 'translate', 'transcribe', 'summarize'
  credits     Int      // Credits used
  inputSize   Int?     // Words or seconds
  outputSize  Int?     // Result size
  metadata    String?  // JSON string for additional data
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([toolType])
}

// Stripe Customer mapping
model StripeCustomer {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  createdAt        DateTime @default(now())

  @@index([stripeCustomerId])
}

// Credit Packages for purchase
model CreditPackage {
  id          String   @id @default(cuid())
  name        String
  credits     Int
  price       Int      // In cents (e.g., 499 = $4.99)
  currency    String   @default("eur")
  stripePriceId String? @unique
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Newsletter Subscribers
model NewsletterSubscriber {
  id           String    @id @default(cuid())
  email        String    @unique
  language     String    @default("en")
  isActive     Boolean   @default(true)
  source       String?   // Where they signed up from (homepage, footer, etc.)
  createdAt    DateTime  @default(now())
  unsubscribedAt DateTime?

  @@index([email])
  @@index([createdAt])
}

// Promo Code System
model PromoCode {
  id              String    @id @default(cuid())
  code            String    @unique // e.g., "WELCOME20", "SUMMER2026"
  type            String    // "credits" | "discount_percent" | "discount_fixed"
  value           Int       // Credits amount or discount percentage/cents
  maxUses         Int?      // Null = unlimited
  usedCount       Int       @default(0)
  minPurchase     Int?      // Minimum purchase in cents (for discounts)
  expiresAt       DateTime?
  isActive        Boolean   @default(true)
  description     String?   // Internal note
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  redemptions     PromoCodeRedemption[]

  @@index([code])
  @@index([isActive])
}

model PromoCodeRedemption {
  id          String   @id @default(cuid())
  promoCodeId String
  userId      String
  creditsAwarded Int?  // If type was "credits"
  discountApplied Int? // If type was discount (in cents)
  createdAt   DateTime @default(now())

  promoCode   PromoCode @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([promoCodeId, userId]) // Each user can only use a code once
  @@index([userId])
}

// Tool Usage History - Saves user's tool results
model ToolHistory {
  id          String   @id @default(cuid())
  userId      String
  toolType    String   // 'qr-generator', 'ai-summarizer', 'ai-image-generator', etc.
  title       String?  // User-friendly title or auto-generated
  inputData   String?  // JSON: Original input (text, prompt, settings)
  outputData  String?  // JSON: Result data (URLs, text snippets, metadata)
  previewUrl  String?  // URL to preview image/thumbnail (for visual tools)
  isFavorite  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([toolType])
  @@index([createdAt])
  @@index([isFavorite])
}

// Referral System
model Referral {
  id            String   @id @default(cuid())
  referrerId    String   // User who shared the referral
  referredId    String   // User who signed up with the referral
  bonusCredits  Int      @default(100) // Credits awarded to each party
  status        String   @default("pending") // pending, completed, expired
  referrerPaid  Boolean  @default(false)
  referredPaid  Boolean  @default(false)
  createdAt     DateTime @default(now())
  completedAt   DateTime?

  referrer      User     @relation("ReferrerUser", fields: [referrerId], references: [id], onDelete: Cascade)
  referred      User     @relation("ReferredUser", fields: [referredId], references: [id], onDelete: Cascade)

  @@unique([referrerId, referredId])
  @@index([referrerId])
  @@index([referredId])
  @@index([status])
}

// Shareable Business Cards
model BusinessCard {
  id          String   @id // Short URL-friendly ID (nanoid)
  firstName   String
  lastName    String
  title       String?
  company     String?
  phone       String?
  email       String?
  website     String?
  address     String?
  bgColor     String   @default("#1e3a5f")
  textColor   String   @default("#ffffff")
  accentColor String   @default("#60a5fa")
  photo       String?  // Base64 encoded photo (compressed)
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  expiresAt   DateTime? // Optional expiration for cleanup

  @@index([createdAt])
}
